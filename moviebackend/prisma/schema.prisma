generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  name String
  email String 
  password String
  profilePicture String?
  
 
 watchlist watchList[]
 createdAt DateTime @default(now())
 role Role @default(Viewer)
 review Review[]
 

}


model Movie{
  id Int @id @default(autoincrement())
   
  name String @unique
  genre String
  watchList watchList[]
  reviews Review[]




  
}

model watchList{
  id Int @id @default(autoincrement())
  userId Int
  movieId Int
  createdAt DateTime @default(now())
  user User @relation(fields: [userId], references: [id])
  
  movie Movie @relation(fields: [movieId], references: [id])


}

model Review{
  id Int @unique @default(autoincrement())


  comment String 
  createdAt DateTime @default(now())
  movieId Int
   
  userId Int
  movie Movie @relation(fields: [movieId], references: [id])
  user User @relation(fields: [userId],references: [id])

  
 

}



enum Role{
  Viewer
  host
}


